{
  "compilerOptions": {
    "target": "ES2015", // Docelowa wersja JS (ES6 działa w większości przeglądarek)
    "module": "ESNext", // System modułów dla import/export w przeglądarce
    "outDir": "./dist", // Folder wyjściowy dla skompilowanego kodu
    "rootDir": "src", // Folder źródłowy
    "strict": true, // Włącza ścisłe sprawdzanie typów
    "esModuleInterop": true, // Ułatwia importowanie modułów CommonJS (np. xlsx)
    "moduleResolution": "node", // Strategia rozwiązywania modułów (działa z npm)
    // "sourceMap": true, // Generuje mapy źródłowe dla debugowania
    "lib": ["DOM", "ESNext"], // Biblioteki dostępne w kodzie (DOM dla przeglądarki, ESNext dla nowoczesnych funkcji)
    "noImplicitAny": true, // Wymaga jawnych typów dla zmiennych
    "allowJs": false, // Nie zezwala na kompilację plików .js (tylko .ts)
    "skipLibCheck": true // Przyspiesza kompilację, pomijając sprawdzanie deklaracji bibliotek
  },
  "include": [
    "src/**/*", // Kompiluj wszystko w folderze src
    "../backend/src/defaultSchoolAddress.ts"
  ],
  "exclude": [
    "node_modules", // Pomiń node_modules
    "**/*.spec.ts"
  ] // Pomiń pliki testowe (jeśli masz
}
